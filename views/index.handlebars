<h1>Burgers!</h1>

<h2>Burgers I Haven't Eaten Yet</h2>

<ul>
  {{#each burgers}} {{#if this.devoured}}
    {{else}}
  <p>{{this.id}} {{this.burger_name}}
    <button class="eatBurger" data-id="{{this.id}}">
      Devour It!
    </button>
  </p> {{/if}} {{/each}}
</ul>


<h2>Burgers That Are In My Belly!</h2>

<ul>
  {{#each burgers}} {{#if this.devoured}}
  <p>{{this.id}} {{this.burger_name}}</p>
  {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="yum/">Add a Burger</label>
    <input type="text" id="yum" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>